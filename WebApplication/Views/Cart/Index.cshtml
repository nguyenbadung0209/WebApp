@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/assets/client/js/controller/cartController.js"></script>
}
<div class="card shadow mb-4">
    <div class="card-body">
        @if (Model.Count > 0)
        {
            var total = 0;


            <div class="row">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Code</th>
                                <th scope="col">Name</th>
                                <th scope="col">Image</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Total Money</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                total += (Convert.ToInt32(item.Product.Price) * item.Quantity);
                                <tr>
                                    <td>@item.Product.ID</td>
                                    <td>@item.Product.Name</td>
                                    <td><img src="@item.Product.Image" width="100" /></td>
                                    <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                                    <td class="priceDefault_@item.Product.ID" data-id="@item.Product.Price">@item.Product.Price $</td>
                                    <td class="resultPrice_@item.Product.ID">@((item.Product.Price * item.Quantity).ToString("N0")) $</td>
                                    <td><a href="#" data-id="@item.Product.ID" class="btn-delete btn btn-dark btn-circle"><i class="fas fa-trash"></i></a></td>
                                    <td></td>
                                </tr>
                            }
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="resultTotal">@total $</td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row form-group" style="margin-left: 105px">
                        <div class="col-8">
                            <button id="btnContinue" type="submit" class="btn btn-primary">Continue shopping</button>
                            <button id="btnUpdate" type="submit" class="btn btn-info">Update cart</button>
                            <button id="btnDeleteAll" type="submit" class="btn btn-danger">Delete cart</button>
                            <button id="btnPayment" type="submit" class="btn btn-success ">Payment</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div style="padding-left: 190px"><span class="alert-danger">There are no products in the cart</span></div>
        }
    </div>
</div>


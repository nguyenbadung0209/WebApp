@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/assets/client/js/controller/cartController.js"></script>  

}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            var total = 0;
            <table class="table">
                <thead>
                    <tr>
                        <td>Code</td>
                        <td>Name</td>
                        <td>Image</td>
                        <td>Quantity</td>
                        <td>Price</td>
                        <td>Total money</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        total += (Convert.ToInt32(item.Product.Price) * item.Quantity);
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td class="priceDefault_@item.Product.ID" data-id="@item.Product.Price">@item.Product.Price $</td>
                            <td class="resultPrice_@item.Product.ID">@((item.Product.Price * item.Quantity).ToString("N0")) $</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Delete</a></td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="resultTotal">@total $</td>
                        <td></td>
                        <td></td>
                    </tr>

                </tbody>
            </table>

            <button id="btnContinue" class="btn">Continue shopping</button>
            <button id="btnUpdate" class="btn">Update cart</button>
            <button id="btnDeleteAll" class="btn">Delete cart</button>
            <button id="btnPayment" class="btn">Payment</button>
        }
        else
        {
            <span class="alert-danger">There are no products in the cart</span>
        }

    </div>
</div>


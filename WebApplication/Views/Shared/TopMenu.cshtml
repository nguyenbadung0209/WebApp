@model List<Model.EF.Menu>

<div class="w-100 d-flex justify-content-between">
    <div style="margin-top:5px">
        <i class="fa fa-envelope mx-2"></i>
        <a class="navbar-sm-brand text-light text-decoration-none" href="mailto:info@company.com">info@company.com</a>
        <i class="fa fa-phone mx-2"></i>
        <a class="navbar-sm-brand text-light text-decoration-none" href="tel:0981789567">0981789567</a>
    </div>

    <div style="padding-right: 35px;">

        @{
            var session = (OnlineShop.Common.UserLogin)Session[OnlineShop.Common.CommonConstanst.USER_SESSION];
        }
        @if (session == null)
        {
            <ul style="height: 20px; padding-right: 10px ">

                @foreach (var item in Model)
                {                   
                    <input type=button onClick="parent.location = '@item.Link'" class="btn btn-success btn-lg" value="@item.Text" />
                }

            </ul>
        }
        else
        {
            
                <a>Hello : @session.UserName </a>

                <a>|</a>
                
                @Html.ActionLink("Logout", "Logout", "User")
           


        }


    </div>
</div>

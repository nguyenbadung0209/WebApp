@model OnlineShop.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">

    <div class="col-xl-6 ">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">LOGIN</h1>
                            </div>
                            @using (Html.BeginForm("Login", "User", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" });

                                <h5 class="h6 text-gray-900 mb-2">Username</h5>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Enter the username" })
                                </div>

                                <h5></h5>
                                <h5 class="h6 text-gray-900 mb-2">Password</h5>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Enter the password" })
                                </div>

                                <h5></h5>

                                <div class="custom-control custom-checkbox small">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe) Remember Me
                                    </label>
                                </div>
                                <h5></h5>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Login
                                </button>

                                <a href="/User/LoginFacebook" class="btn btn-facebook ">
                                    <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                </a>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section JsFooter {

    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }
        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg)
                openSuccessModal(msg);
        });
    </script>
}

@model OnlineShop.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center" style="height:600px">

    <div class="col-xl-6 ">

        <div class="card o-hidden border-0 shadow-lg my-5" style="width: 500px;margin-left:130px">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-lg-12">
                        <div class="p-5" style="height: 500px;">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Login</h1>
                            </div>
                            @using (Html.BeginForm("Login", "User", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false, "", new { @class = "text-danger", @style = "padding-left: 45px" })

                                <h5 class="h6 text-gray-900 mb-2" style="margin-left: 60px ">Username</h5>

                                <div class="form-group" style="width: 280px; margin-top: 20px; margin-left: 60px ">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Enter the username" })
                                </div>


                                <h5 class="h6 text-gray-900 mb-2" style="margin-top: 20px; margin-left: 60px ">Password</h5>

                                <div class="form-group" style="width: 280px; margin-top: 20px; margin-left: 60px ">
                                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Enter the password" })

                                </div>

                                <div class="custom-control custom-checkbox small" style="margin-top: 20px; margin-left: 38px ">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe) Remember Me
                                    </label>
                                </div>

                                <div style="padding-left: 160px; margin-top: 25px ">
                                    <button type="submit" class="btn btn-success" style="height: 45px; width: 90px;">
                                        Login
                                    </button>
                                </div>


                                @*<a href="/User/LoginFacebook" class="btn btn-facebook ">
                                        <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                    </a>*@

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section JsFooter {

    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }
        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg)
                openSuccessModal(msg);
        });
    </script>
}

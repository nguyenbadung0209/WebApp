@model PagedList.IPagedList<Model.ViewModel.ProductViewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    <div class="panel panel-default">
        <div class="panel-heading">
            Product List
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            @using (Html.BeginForm("Index", "Product", FormMethod.Get))
            {
                <div class="row form-group">
                    <div class="col-4">
                        <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                    </div>
                    <div class="col-8">
                        <button type="submit" class="btn btn-success">Search</button>
                        <a class="btn btn-primary" href="">Add new</a>
                        <input id="btnDelete" class="btn btn-danger" type="submit" value="Delete" />

                    </div>
                </div>
            }
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th><input type="checkbox" name="allcheck" id="checkAll" /></th>
                                <th>NameCategory</th>
                                <th>MetaTitle</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.ID">
                                <td><input type="checkbox" name="userDelete" class="userDelete" value="@item.ID" /></td>
                                <td>@item.CateName</td>
                                <td>@item.CateMetaTitle</td>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Code</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td><a href="#" class="btn-active" data-id="@item.ID ">@(item.Status ? "Actived" : "Lock")</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
}


@model Model.ViewModel.ProductViewModel

<div class="modal-header">
    <span>ADD NEW PRODUCT</span>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post, new { @id = "myForm", @name = "productForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, @style = "width:250px" })
        </div>

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" }, @style = "width:250px" })
        </div>

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }, @style = "width:250px" })
        </div>

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" }, @style = "width:250px" })
        </div>

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" }, @style = "width:250px" })
        </div>

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.CategoryID, new SelectList(Model.CateCollection, "ID", "Name"), "--Select--", new { htmlAttributes = new { @class = "form-control" }, @style = "width:250px" })
        </div>

        <div class="form-group" style="width : 1000px">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Status)
        </div>

        <div class="modal-footer">
            &nbsp;
            <button type="button" onclick="createProduct()" class="btn btn-primary">Create</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    }
</div>

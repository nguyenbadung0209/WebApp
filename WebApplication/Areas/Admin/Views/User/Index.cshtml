@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc
@{
    ViewBag.Title = "Manage users";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}



@section header{




    <div class="panel panel-default">
        <div class="panel-heading">
            User List
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            @using (Html.BeginForm("Index", "User", FormMethod.Get))
            {
                if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function ()
                        {
                        alert("@ViewBag.Message");
                        }
                    </script>
                }
                <div class="row form-group">
                    <div class="col-4">
                        <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                    </div>
                    <div class="col-8">
                        <button type="submit" class="btn btn-success">Search</button>
                        <a class="btn btn-primary" href="/Admin/User/Create">Add new</a>
                    </div>
                </div>
            }
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Username</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID ">@(item.Status ? "Actived" : "Lock")</a></td>

                                    <td>
                                        <a href="/Admin/User/Edit/@item.ID">Edit</a>
                                        |
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Do you want to delete this record?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
}

@section jsFooter{

    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }

        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg)
                openSuccessModal(msg);
        });
    </script>

    <script src="~/assets/admin/js/controller/userController.js"></script> }







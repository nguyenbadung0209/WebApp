@model Model.EF.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


@section header{
    <h2>ADD PRODUCT CATEGORY</h2>
    <hr />
    @using (Html.BeginForm("Create", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });

        <div class="form-horizontal">

            <div class="form-group" style="width : 1000px">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, @style = "width:200px" })
            </div>

            <div class="form-group" style="width : 1000px">
                @Html.LabelFor(model => model.MetaTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control" }, @style = "width:200px" })
            </div>

            <div class="form-group" style="width : 1000px">
                @Html.LabelFor(model => model.MetaDescriptions, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.MetaDescriptions, new { htmlAttributes = new { @class = "form-control" }, @style = "width:200px" })
            </div>

            <div class="form-group" style="width : 1000px">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Status)

            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-auto">
                    <input class="btn btn-primary" type="submit" value="Create" />
                </div>
            </div>
        </div>
    }

    <div style="margin-left:8px">
        @Html.ActionLink("Back to List", "Index", "Product")
    </div>
}

